<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumOfDangerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/go_num_of_danger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="继续" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="选择您的血压等级\n点击继续进行危险因素检测"
            android:textSize="24sp"
            tools:text="选择您的血压等级\n点击继续进行危险因素检测" />

        <ListView
            android:id="@+id/pressure_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@drawable/selector_listview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="50dp">

        </ListView>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>